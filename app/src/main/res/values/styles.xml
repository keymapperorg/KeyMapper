<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="SecondaryCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="TriggerChipGroup" parent="Widget.Material3.ChipGroup">
        <item name="chipStyle">@style/KeymapListChip.TriggerKey</item>
    </style>

    <style name="OptionChipGroup" parent="Widget.Material3.ChipGroup">
        <item name="chipStyle">@style/KeymapListChip.Option</item>
    </style>

    <style name="ConstraintChipGroup" parent="Widget.Material3.ChipGroup">
        <item name="chipStyle">@style/KeymapListChip.Constraint</item>
    </style>

    <style name="OutlineChip" parent="Widget.Material3.Chip.Input">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/material_dynamic_secondary90</item>
        <item name="android:checkable">false</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="UrlLinkChip" parent="OutlineChip">
        <item name="closeIconVisible">false</item>
        <item name="chipIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="KeymapListChip" parent="OutlineChip" />

    <style name="KeymapListChip.TriggerKey">
        <item name="closeIconVisible">false</item>
        <item name="chipIconTint">?attr/colorOnSurface</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="KeymapListChip.TriggerKey.Separator">
        <item name="chipStrokeWidth">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="textStartPadding">0dp</item>
    </style>

    <style name="KeymapListChip.Option">
        <item name="closeIconVisible">false</item>
        <item name="android:clickable">false</item>
        <item name="chipIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="KeymapListChip.Constraint">
        <item name="closeIconVisible">false</item>
        <item name="android:clickable">false</item>
        <item name="closeIcon">@drawable/ic_baseline_error_outline_24</item>
        <item name="closeIconTint">?attr/colorError</item>
    </style>

    <style name="KeymapListHeader" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor" tools:ignore="PrivateResource">@color/mtrl_chip_text_color
        </item>
    </style>

    <style name="RecyclerViewPlaceholderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="theme">@style/BottomAppBar.Theme</item>
    </style>

    <style name="BottomAppBar.Theme" parent="ThemeOverlay.Material3.BottomAppBar">
        <!--        <item name="iconTint">?attr/colorOnSecondaryContainer</item>-->
        <!--        <item name="tint">?attr/colorOnSecondaryContainer</item>-->
        <!--        <item name="android:editTextColor">?attr/colorOnSecondaryContainer</item>-->
        <!--        <item name="navigationIconTint">?attr/colorOnSecondaryContainer</item>-->
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheetMenuItem">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="BottomSheetMenuItem" parent="Widget.Material3.Button.TextButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">64dp</item>
        <item name="iconPadding">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.BottomSheetMenuItem</item>
    </style>

    <style name="ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="Widget.Button.Red" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Widget.Button.Green" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <declare-styleable name="ChipButton">
        <attr name="normalChipButtonStyle" format="reference" />
        <attr name="errorChipButtonStyle" format="reference" />
        <attr name="fixableErrorChipButtonStyle" format="reference" />
        <attr name="transparentChipButtonStyle" format="reference" />
    </declare-styleable>

    <style name="NormalChipButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Chip</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="iconSize">@dimen/button_chip_icon_size</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TransparentChipButton" parent="Widget.Material3.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:enabled">false</item>
        <item name="iconSize">@dimen/button_chip_icon_size</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="LinkChipButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:enabled">true</item>
        <item name="iconSize">24dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ErrorChipButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Chip</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">?attr/colorError</item>
        <item name="iconTint">?attr/colorOnError</item>
        <item name="icon">@drawable/ic_baseline_error_outline_24</item>
        <item name="backgroundTint">?attr/colorError</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="iconSize">@dimen/button_chip_icon_size</item>
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

    <style name="MyPreferenceFragmentStyle" parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/fragment_preferences_with_appbar</item>
    </style>

</resources>
